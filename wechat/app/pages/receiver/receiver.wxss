/* pages/receiver/receiver.wxss */
.site_list {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top:60rpx;
}
.site_list_item {
  width: 100%;
  height: 104rpx;
  border-bottom: 1rpx solid #f4f5fa;
  overflow: hidden;
  display: flex;
  align-items: center;
}
.site_list_item .fl {
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}
.site_list_item .fr {
  flex: 1;
  float: right;
  font-size: 28rpx;
  color: #909090;
}
.site_list_item .fr input {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #909090;
}


.submit{
  font-size: 30rpx;
  height:60rpx;
}
