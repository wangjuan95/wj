/**index.wxss**/
page {
  height: 100%;
}
scroll-view {
  position: relative;
  height: 100%;
  padding-top: 96rpx;
  padding-bottom: 200rpx;
}
.nav {
  display: flex;
  
}
.nav view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
}
.nav_itemhide {
  color: #05c127
}
.nav_itemshow {
  color: #fff;
}
.nav view:nth-child(1) {
  background-color: red;
}
.nav view:nth-child(2) {
  background-color: pink;
}
.nav view:nth-child(3) {
  background-color: yellowgreen;
}
.nav view:nth-child(4) {
  background-color: yellow;
}

.nav_ct:nth-child(1) {
  width: 100%;
  height: 800rpx;
  background-color: red;
}
.nav_ct:nth-child(2) {
  width: 100%;
  height: 800rpx;
  background-color: pink;
}
.nav_ct:nth-child(3) {
  width: 100%;
  height: 800rpx;
  background-color: yellowgreen;
}
.nav_ct:nth-child(4) {
  width: 100%;
  height: 800rpx;
  background-color: yellow;
}